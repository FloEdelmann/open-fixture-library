{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "COLORband PiX",
  "shortName": "ChvtDJCOLORbandPiX",
  "categories": ["Pixel Bar", "Color Changer"],
  "meta": {
    "authors": ["Colorblind Dude"],
    "createDate": "2019-04-15",
    "lastModifyDate": "2019-04-15"
  },
  "links": {
    "manual": [
      "https://www.chauvetdj.com/wp-content/uploads/2015/12/COLORband_PiX_UM_Rev6_WO-1.pdf"
    ],
    "productPage": [
      "https://www.chauvetdj.com/products/colorband-pix/"
    ],
    "video": [
      "https://www.youtube.com/watch?v=3LjlTRm3gcs"
    ]
  },
  "physical": {
    "dimensions": [1057, 154, 64],
    "weight": 4,
    "power": 86,
    "DMXconnector": "3-pin and 5-pin",
    "bulb": {
      "type": "3W RGB LEDs"
    },
    "lens": {
      "degreesMinMax": [20, 20]
    },
    "focus": {
      "type": "Fixed"
    }
  },
  "matrix": {
    "pixelCount": [12, 1, 1],
    "pixelGroups": {
      "Master": "all",
      "1/2": { "x": ["<=6"] },
      "2/2": { "x": [">=7"] },
      "1/3": ["1", "2", "3", "4"],
      "2/3": ["5", "6", "7", "8"],
      "3/3": ["9", "10", "11", "12"],
      "1/4": ["1", "2", "3"],
      "2/4": ["4", "5", "6"],
      "3/4": ["7", "8", "9"],
      "4/4": ["10", "11", "12"],
      "1/6": ["1", "2"],
      "2/6": ["3", "4"],
      "3/6": ["5", "6"],
      "4/6": ["7", "8"],
      "5/6": ["9", "10"],
      "6/6": ["11", "12"]
    }
  },
  "templateChannels": {
    "Red $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Green $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Blue $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    }
  },
  "modes": [
    {
      "name": "36-channel",
      "shortName": "36ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": "eachPixelABC",
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    }
  ]
}
