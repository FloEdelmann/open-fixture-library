{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "Mega Bar RGBA",
  "shortName": "ADJMBRGBA",
  "categories": ["Pixel Bar", "Color Changer"],
  "meta": {
    "authors": ["Anonymous"],
    "createDate": "2018-12-07",
    "lastModifyDate": "2018-12-07"
  },
  "links": {
    "manual": [
      "https://cdb.s3-us-west-1.amazonaws.com/ItemRelatedFiles/6989/mega_bar_rgba.pdf"
    ],
    "productPage": [
      "https://www.adj.com/mega-bar-rgba"
    ],
    "video": [
      "https://www.youtube.com/watch?v=WXp4BXd6yC8"
    ]
  },
  "physical": {
    "dimensions": [1060, 145, 73],
    "weight": 2.7,
    "power": 32,
    "DMXconnector": "3-pin",
    "bulb": {
      "type": "320x 10mm LEDs (64 red, 96 green, 96 blue, 64 amber)"
    },
    "lens": {
      "degreesMinMax": [30, 30]
    },
    "matrixPixels": {
      "dimensions": [125, 50, 10],
      "spacing": [0, 0, 0]
    }
  },
  "matrix": {
    "pixelCount": [8, 1, 1]
  },
  "templateChannels": {
    "Red $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Blue $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    },
    "Green $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Amber $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Amber"
      }
    }
  },
  "availableChannels": {
    "Strobe": {
      "capabilities": [
        {
          "dmxRange": [0, 7],
          "type": "NoFunction"
        },
        {
          "dmxRange": [8, 255],
          "type": "ShutterStrobe",
          "shutterEffect": "Strobe",
          "speedStart": "stop",
          "speedEnd": "fast"
        }
      ]
    },
    "Intensity": {
      "capability": {
        "type": "Intensity"
      }
    }
  },
  "modes": [
    {
      "name": "34 Channel",
      "shortName": "34ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": "eachPixelXYZ",
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey",
            "Amber $pixelKey"
          ]
        },
        "Strobe",
        "Intensity"
      ]
    }
  ]
}
